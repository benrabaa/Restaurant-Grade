<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.DetailsFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="309dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Restaurant Name:"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="125dp" />


            <TextView
                android:id="@+id/restaurant_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurant Address:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/restaurant_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurant Phone:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/grade_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grade date:"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/inspection_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inspection Date:"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/critical_flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="critical flag:"

                android:textSize="20sp" />

            <TextView
                android:id="@+id/violation_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="violation_description:"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/grade"
                android:layout_width="100dp"
                android:layout_height="100dp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>